#lektor
def pesel():
  a = int(input("podaj pesel: "))
  if len(str(a))== 11:
    print("pog")
    rok =str(a)[-2]+str(a)[-1]
    print(rok)
  else:
    print("Nie fajnie")

while True:
  odp = Label(ok, text="co chcesz zrobiÄ‡: ")
  odp = input()
  print("hi")
  if odp == "pesel":
    pesel()
  elif odp == help:
    print("helptime \n helpgame \n helptime")



